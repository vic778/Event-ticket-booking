
<div class="container mx-auto mt-4">
  <h1 class="font-bold text-4xl mb-4">Events</h1>
  
  <% @events.each do |event| %>
    <div class="bg-white shadow-md rounded-md p-4 mb-4">
      <h2 class="text-xl font-semibold mb-2"><%= event.name %></h2>
      <p class="text-gray-700 mb-2"><%= event.description %></p>
      <p class="text-gray-600 mb-2"><%= event.location %></p>
      <p class="text-gray-600 mb-2">Date & Time: <%= event.date_and_time.strftime("%B %d, %Y %I:%M %p") %></p>
      <p class="text-gray-600">Available Tickets: <%= event.available_tickets %></p>
    </div>
  <% end %>
</div>
