<div class="container mx-auto p-4 w-1/2 mx-auto">
  <h1 class="font-bold text-4xl mb-4">Event Details</h1>
  
  <div class="mb-4">
    <p class="block text-gray-700 text-sm font-bold mb-2">Event Name</p>
    <p><%= @event.name %></p>
  </div>

  <div class="mb-4">
    <p class="block text-gray-700 text-sm font-bold mb-2">Description</p>
    <p><%= @event.description %></p>
  </div>

  <div class="mb-4">
    <p class="block text-gray-700 text-sm font-bold mb-2">Location</p>
    <p><%= @event.location %></p>
  </div>

  <div class="mb-4">
    <p class="block text-gray-700 text-sm font-bold mb-2">Date & Time</p>
    <p><%= @event.date_and_time.strftime("%B %d, %Y %I:%M %p") %></p>
  </div>

  <div class="mb-4">
    <p class="block text-gray-700 text-sm font-bold mb-2">Total Tickets</p>
    <p><%= @event.total_tickets %></p>
  </div>
</div>
