<div class="container mx-auto p-4 w-1/2 mx-auto">
  <%= form_with(model: [@user, @event], local: true, data: { turbo: false }) do |form| %>
    <% if @event.errors.any? %>
      <%= render partial: "shared/form_errors", locals: { record: @event } %>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, "Event Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border rounded-md" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, "Description", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_area :description, class: "w-full px-3 py-2 border rounded-md" %>
    </div>

    <div class="mb-4">
      <%= form.label :location, "Location", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :location, class: "w-full px-3 py-2 border rounded-md" %>
    </div>

    <div class="mb-4">
      <%= form.label :datetime, "Date & Time", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.datetime_local_field :date_and_time, class: "w-full px-3 py-2 border rounded-md" %>
    </div>

    <div class="mb-4">
      <%= form.label :total_tickets, "Total Tickets", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.number_field :total_tickets, class: "w-full px-3 py-2 border rounded-md" %>
    </div>

    <div class="mt-4">
      <%= form.submit @event.persisted? ? "Update Event" : "Create Event", class: "px-4 py-2 bg-blue-500 text-white rounded-md" %>
    </div>
  <% end %>
</div>
