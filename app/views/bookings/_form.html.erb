<div class="container mx-auto p-4 w-1/2 mx-auto">
  <%= form_with(model: [@event, @booking], local: true, data: { turbo: false }) do |form| %>
    <% if @event.errors.any? %>
      <%= render partial: "shared/form_errors", locals: { record: @booking } %>
    <% end %>

    <div class="mb-4">
      <%= form.label :ticket_quantity, "Number of ticket", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :ticket_quantity, class: "w-full px-3 py-2 border rounded-md" %>
    </div>

    <div class="mt-4">
      <%= form.submit @booking.persisted? ? "Update Booking" : "Book Event", class: "px-4 py-2 bg-blue-500 text-white rounded-md" %>
    </div>
  <% end %>
</div>
